package com.example.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.persistence.CalendarRepository;
import com.example.service.CalendarService;

@Controller
@RequestMapping("/academy/calendar")
public class CalendarController {

	@Autowired
	private CalendarRepository calRepo;

	@GetMapping(params="method=list")
	public String list() {
		return "academy/calendar";
	}
	
	@GetMapping(params = "method=data")
	public String data(Model m) {
		m.addAttribute("list", calRepo.CalendarSearch());
		return "pageJsonReport";
	}
	
}
